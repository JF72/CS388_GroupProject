<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Task Name -->
        <EditText
            android:id="@+id/taskNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Name" />

        <!-- Task Description -->
        <EditText
            android:id="@+id/taskDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Description"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <!-- Due Date Picker -->
        <Button
            android:id="@+id/dueDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Due Date" />

        <!-- Sliders -->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Estimate" />
        <SeekBar
            android:id="@+id/timeEstimateSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty" />
        <SeekBar
            android:id="@+id/difficultySeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority" />
        <SeekBar
            android:id="@+id/prioritySeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physical Effort" />
        <SeekBar
            android:id="@+id/physicalEffortSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5" />
        <Switch
            android:id="@+id/groupTaskSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create as Group Task"
            android:padding="8dp"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/groupSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            />

        <!-- Submit Button -->
        <Button
            android:id="@+id/saveTaskButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Task" />

    </LinearLayout>
</ScrollView>
